@model QL_TraiCay.Models.TRAICAY
@using QL_TraiCay.Models
@{
    ViewBag.Title = "Thêm trái cây";
    Layout = "~/Views/Shared/QLy_LayoutPage1.cshtml";
}
@{
    List<LOAITRAICAY> ltc = ViewBag.MaLoai;
}

<div class="container-fluid">
    <h2 class=" text-success m-2 text-center">Thêm Loại Trái Cây</h2>
    <form method="post" action="/QuanLy/Them_TC" enctype="multipart/form-data">
        <div class="editor-label">
            Mã trái cây
        </div>
        <div class="editor-field ">
            <input type="text" name="MATC" class="form-control" />
        </div>
        <div class="editor-label">
            Mã Loại
        </div>
        <div class="editor-field">

            <select id="ml" name="MALOAI" class="form-control">
                @foreach (var i in ltc)
                {
                    <option value="@i.MALOAI">@i.TENLOAI</option>
                }
            </select>
        </div>

        <div class="editor-label">
            Tên trái cây
        </div>
        <div class="editor-field">
            <input type="text" name="TENTC" class="form-control" />
        </div>

        <div class="editor-label">
            Đơn vị
        </div>
        <div class="editor-field ">
            <input type="text" name="DONVI" class="form-control" />
        </div>

        <div class="editor-label ">
            Giá
        </div>
        <div class="editor-field ">
            <input type="text" name="GIAMOI" class="form-control" />
        </div>

        <div class="editor-label">
            Chi tiết
        </div>
        <div class="editor-field">
            <input type="text" name="CHITIET" class="form-control" />
        </div>

