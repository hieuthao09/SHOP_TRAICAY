            </div>*@

        <div class="editor-label">
            Giảm giá
        </div>
        <div class="editor-field">
            <input type="text" name="GIAMGIA" class="form-control" />
        </div>

        <div>
            List Hình ảnh
        </div>
        <div>
            <input class="form-control" type="file" name="fupload" />
        </div>

        @*<div class="editor-label">
